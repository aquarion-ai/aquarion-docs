{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
    "description": "Set up base environment and non-Python dev tools for aquarion-docs.",
    "env": {
        "HATCH_VERBOSE": "1",
        "PATH": "$PWD/scripts/:$PWD/.local/bin:$PATH",
        "UV_NO_SYNC": "true",
        "XDG_CACHE_HOME": "$PWD/.local/cache",
        "XDG_CONFIG_HOME": "$PWD/.local/config",
        "XDG_DATA_HOME": "$PWD/.local/share"
    },
    "name": "Aquarion AI - aquarion-docs dev and CI environment",
    "packages": {
        "markdownlint-cli2": "0.18.1",
        "nushell": "0.106.1",
        "trivy": "0.66.0",
        "uv": "0.8.14"
    }
}
